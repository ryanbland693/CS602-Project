                <h5 class="card-title">{{this.PaintingName}}</h5>
                <p class="card-text">{{this.PaintingLength}} x {{this.PaintingWidth}} cm</p>
            </div>
        </div>
    {{/if}}
    {{/each}}  
</div>
</div>
{{else}}
<div class="text-center">Oops, there's nothing here</div>
{{/if}}