<h1 class="text-center">Galleries</h1>
{{#if data}}
<table class="table text-center">
    <thead>
        <th scope="col" class="text-start">Image</th>
        <th scope="col">Name</th>
        <th scope="col">City</th>
        <th scope="col">Country</th>
        <th scope="col">Website</th>
        <th scope="col">Action</th>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td class="text-start">
                <image src="{{this.ImageUrl}}" alt="{{this.GalleryName}}" style="height:75px">
            </td>
            <td>
                {{this.GalleryName}}
            </td>
            <td>
                {{this.GalleryCity}}
            </td>
            <td>
                {{this.GalleryCountry}}
            </td>
            <td>
                <a href="{{this.GalleryURL}}">{{this.GalleryURL}}</a>
            </td>
            <td>
                <a href="/admin/galleries/edit/{{this.GalleryId}}" class="link-primary">Edit</a>
                <a href="/admin/galleries/delete/{{this.GalleryId}}" class="link-primary">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="d-flex justify-content-center align-items-center flex-column">
    Oops, there's nothing here yet
</div>
{{/if}}
<div class="text-center mt-5">
    <button onclick="goToAddGallery();" id="addPainting" type="button"
        class="btn btn-primary">Add</button>
</div>