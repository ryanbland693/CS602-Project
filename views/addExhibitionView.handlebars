<h1 class="text-center">Add Exhibition</h1>
<form method="post" action="/admin/exhibitions/add">
    <div class="mb-3">
        <label for="galleryName" class="form-label">Name</label>
        <input type="text" class="form-control" id="exhibitionName" name="exhibitionName" aria-describedby="Name of Exhibition" required>
    </div>
    <div class="mb-3">
        <label for="galleryCity" class="form-label">Date</label>
        <input type="date" class="form-control" id="exhibitionDate" name="exhibitionDate" aria-describedby="City where gallery is located" required>
    </div>
    <div class="mb-3">
        <label for="galleryCountry" class="form-label">Website</label>
        <input type="text" class="form-control" id="exhibitionUrl" name="exhibitionUrl" aria-describedby="Country where gallery is located" required>
    </div>
    <button id="exhibitionForm" type="submit" class="btn btn-primary">Submit</button>
</form>