<h1 class="text-center">Admin</h1>

{{#if data}}
<table class="table align-middle text-center">
    <thead>
        <tr>
            <th scope="col" class="text-start">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Length</th>
            <th scope="col">Width</th>
            <th scope="col">Visible</th>
            <th scope="col">Medium</th>
            <th scope="col">Availability</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td class="text-start">
                <img src="{{this.ImageUrl}}" alt="{{this.PaintingName}}" style="height:75px">
            </td>
            <td>{{this.PaintingName}}</td>
            <td>{{this.PaintingDescription}}</td>
            <td>{{this.PaintingPrice}}</td>
            <td>{{this.PaintingLength}}</td>
            <td>{{this.PaintingWidth}}</td>
            <td>{{this.PaintingVisible}}</td>
            <td>{{this.MediumName}}</td>
            <td>{{this.AvailabilityName}}</td>
            <td><a href="/paintings/{{this.PaintingId}}" class="link-primary">View</a> <a
                    href="/admin/paintings/edit/{{this.PaintingId}}" class="link-primary">Edit</a> <a
                    href="/admin/paintings/delete/{{this.PaintingId}}" class="link-primary">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<div class="d-flex justify-content-center align-items-center flex-column">
    Oops, there's nothing here yet
</div>
{{/if}}
<div class="text-center mt-5"><button onclick="goToAddPainting();" id="addPainting" type="button"
        class="btn btn-primary">Add</button>
</div>