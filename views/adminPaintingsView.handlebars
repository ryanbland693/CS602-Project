<h1 class="text-center">Admin</h1>

{{#if data}}
<table class="table align-middle text-center">
    <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>
                <img src="{{this.ImageUrl}}" alt="{{this.PaintingName}}" 
                style="height:75px">
            </td>
            <td>{{this.PaintingName}}</td>
            <td><a href="/paintings/{{this.PaintingId}}" class="link-primary">View</a> <a href="/admin/paintings/edit/{{this.PaintingId}}" class="link-primary">Edit</a> <a href="/admin/paintings/delete/{{this.PaintingId}}" class="link-primary">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<div class="d-flex justify-content-center align-items-center flex-column">
<div>Oops, there's nothing here yet</div>

</div>
{{/if}}
<div class="text-center"><button onclick="goToAddPainting();" id="addPainting" type="button" class="btn btn-primary">Add</button></div>